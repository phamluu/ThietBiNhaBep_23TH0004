@using ThietBiNhaBep_23TH0004.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}

<main aria-labelledby="title" style="max-width:500px; margin:0 auto">
    <h2 id="title" class="primary-color">@ViewBag.Title.</h2>
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row mt-2">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-2">
                @Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-3">
                <div class="offset-md-3 col-md-9">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, "Nhớ mật khẩu")
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="offset-md-3 col-md-9">
                    <input type="submit" value="Đăng nhập" class="btn btn-outline-dark primary-background" />
                </div>
            </div>
            <p class="mt-3">
               Nếu bạn chưa có tài khoản. Hãy @Html.ActionLink("Đăng ký", "Register")
            </p>
            @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
        }
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}